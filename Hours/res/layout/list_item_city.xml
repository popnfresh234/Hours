<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/restaurant_list_vertical_margin"
        android:layout_marginLeft="@dimen/restaurant_list_horizontal_margin"
        android:layout_marginRight="@dimen/restaurant_list_horizontal_margin"
        android:layout_marginTop="@dimen/restaurant_list_vertical_margin"
        android:background="@drawable/background_activated"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:paddingTop="@dimen/activity_small_vertical_margin"
            android:paddingBottom="@dimen/activity_small_vertical_margin"
            android:layout_gravity="center_vertical"
            android:id="@+id/city_list_item_titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>